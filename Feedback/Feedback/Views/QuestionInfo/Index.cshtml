@model List<Feedback.DAL.Model.QuestionInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table class="table table-hover"
><thead>
     <tr>
         <td>Id</td>
         <td>Description</td>
         <td>Action</td>
     </tr> 
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Description</td>
            <td>
                <button class="btn btn-default"><span class="glyphicon glyphicon-eye-open"></span></button>
                <button class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></button>
                <button class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
            </td>
        </tr>
        }
    </tbody>
</table>