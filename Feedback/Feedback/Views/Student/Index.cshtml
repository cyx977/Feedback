@model List<Feedback.DAL.Model.StudentInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Information</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Address</td>
            <td>Phone</td>
            <td>Email</td>
            <td>Gender</td>
            <td>Course</td>
            <td>Enroll Date</td>
            <td>Teacher</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            @if (item.Gender == true)
            {
                <td>Male</td>
            }
            else
            {
                <td>Female</td>
            }
            <td>@item.CourseInfo.Name</td>
            <td>@item.EnrolledDate.Value.ToShortDateString()</td>
            <td>@item.TeacherInfo.Name</td>
            <td>
                <button class="btn btn-default"><span class="glyphicon glyphicon-eye-open"></span></button>
                <button class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></button>
                <button class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
            </td>
        </tr>
        }
    </tbody>
</table>

